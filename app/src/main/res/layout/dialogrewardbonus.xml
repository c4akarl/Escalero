<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/view_horizontal_margin_4"
                 android:layout_marginTop="@dimen/view_margin_10"
                 android:layout_marginBottom="@dimen/view_margin_10"
                 android:background="@color/colorBlack">

    <ImageView
        android:id="@+id/escaleroIcon"
        android:src="@drawable/icon_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_0"
        android:layout_marginBottom="@dimen/margin_0"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />
    <ImageView
        android:id="@+id/gamesIcon"
        android:src="@drawable/icon_firebase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_0"
        android:layout_marginBottom="@dimen/margin_0"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginRight="@dimen/button_margin"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/matchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/escaleroIcon"
        android:layout_toLeftOf="@+id/gamesIcon"
        android:gravity="center_horizontal"
        android:textColor="@color/colorDiceB"
        android:textSize="36dp"
        android:text="@string/appLabel" />

    <TextView
        android:id="@+id/mes2Title"
        android:layout_below="@id/matchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_2"
        android:layout_marginBottom="@dimen/margin_2"
        android:textColor="@color/colorPlayerB"
        android:textSize="@dimen/text_size_16"
        android:text="@string/rewardBonus" />

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_below="@id/mes2Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/diceD_1"
            android:src="@drawable/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/view_vertical_margin"
            android:layout_marginLeft="@dimen/view_horizontal_margin_4" />
        <ImageView
            android:id="@+id/diceD_2"
            android:src="@drawable/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/view_vertical_margin"
            android:layout_marginLeft="@dimen/view_horizontal_margin_4" />
        <ImageView
            android:id="@+id/diceD_3"
            android:src="@drawable/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/view_vertical_margin"
            android:layout_marginLeft="@dimen/view_horizontal_margin_4" />
        <ImageView
            android:id="@+id/diceD_4"
            android:src="@drawable/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/view_vertical_margin"
            android:layout_marginLeft="@dimen/view_horizontal_margin_4" />
        <ImageView
            android:id="@+id/diceD_5"
            android:src="@drawable/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/view_vertical_margin"
            android:layout_marginLeft="@dimen/view_horizontal_margin_4" />
    </LinearLayout>

    <TextView
        android:id="@+id/mes2"
        android:layout_below="@id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_margin_10"
        android:layout_marginBottom="@dimen/view_margin_10"
        android:textColor="@color/colorPlayerB"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        android:id="@+id/actions"
        android:layout_below="@id/mes2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginBottom="@dimen/view_vertical_margin"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/action1"
            style="@style/c4aTV4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_height"
            android:layout_weight="1"
            android:background="@drawable/rectangleyellow"
            android:textSize="@dimen/text_size_16"
            android:text="@string/back" />
        <TextView
            android:id="@+id/action2"
            style="@style/c4aTV4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_height"
            android:layout_weight="1"
            android:background="@drawable/rectangleyellow"
            android:textSize="@dimen/text_size_16"
            android:text="@string/playOnline" />
    </LinearLayout>

</RelativeLayout>